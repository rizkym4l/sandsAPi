"info": {
"title": "SignMaster API",
"description": "API untuk aplikasi belajar bahasa isyarat SignMaster",
"version": "1.0",
"contact": {}
},
"tags": [
{
"name": "Auth",
"description": "Authentication endpoints"
},
{
"name": "Users",
"description": "User management"
},
{
"name": "Levels",
"description": "Learning levels"
},
{
"name": "Lessons",
"description": "Lessons within levels"
},
{
"name": "Progress",
"description": "User progress tracking"
},
{
"name": "Quiz",
"description": "Quiz submission & results"
},
{
"name": "Achievements",
"description": "User achievements"
},
{
"name": "Daily Activity",
"description": "Daily activity & streaks"
}
],
"servers": [],
"components": {
"securitySchemes": {
"JWT-auth": {
"scheme": "bearer",
"bearerFormat": "JWT",
"type": "http",
"name": "JWT",
"description": "Enter JWT token",
"in": "header"
}
},
"schemas": {
"UpdateProfileDto": {
"type": "object",
"properties": {
"displayName": {
"type": "string",
"example": "John Doe"
},
"bio": {
"type": "string",
"example": "Saya sedang belajar bahasa isyarat"
}
}
},
"RegisterDto": {
"type": "object",
"properties": {
"email": {
"type": "string",
"example": "user@gmail.com"
},
"username": {
"type": "string",
"example": "johndoe"
},
"password": {
"type": "string",
"example": "password123"
}
},
"required": [
"email",
"username",
"password"
]
},
"LoginDto": {
"type": "object",
"properties": {
"email": {
"type": "string",
"example": "user@gmail.com"
},
"password": {
"type": "string",
"example": "password123"
}
},
"required": [
"email",
"password"
]
},
"AnswerDto": {
"type": "object",
"properties": {
"questionId": {
"type": "string",
"example": "507f1f77bcf86cd799439011"
},
"userAnswer": {
"type": "string",
"example": "A"
},
"timeSpent": {
"type": "number",
"example": 5
}
},
"required": [
"questionId",
"userAnswer",
"timeSpent"
]
},
"MistakeDto": {
"type": "object",
"properties": {
"position": {
"type": "number",
"example": 2
},
"expectedLetter": {
"type": "string",
"example": "B"
},
"detectedLetter": {
"type": "string",
"example": "D"
}
},
"required": [
"position",
"expectedLetter",
"detectedLetter"
]
},
"CameraChallengeDto": {
"type": "object",
"properties": {
"word": {
"type": "string",
"example": "HALO"
},
"mistakes": {
"type": "array",
"items": {
"$ref": "#/components/schemas/MistakeDto"
}
},
"averageConfidence": {
"type": "number",
"example": 0.85
}
},
"required": [
"word",
"mistakes",
"averageConfidence"
]
},
"SubmitDto": {
"type": "object",
"properties": {
"lessonId": {
"type": "string",
"example": "507f1f77bcf86cd799439011"
},
"quizType": {
"type": "string",
"example": "quiz",
"enum": [
"practice",
"quiz",
"camera-challenge"
]
},
"answers": {
"type": "array",
"items": {
"$ref": "#/components/schemas/AnswerDto"
}
},
"cameraChallenge": {
"$ref": "#/components/schemas/CameraChallengeDto"
}
},
"required": [
"lessonId",
"quizType",
"answers"
]
}
}
}
}